<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.CloudNine.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    android:theme="@style/Theme.CloudNine.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textViewWidgetTime"
                android:gravity="start|center_vertical"
                android:text="00:00"
                android:textSize="30dp"
                android:textStyle="bold"
                android:padding="5dp"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.7">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewWidgetLocation"
                android:textSize="20dp"
                android:text="- -"
                android:padding="5dp"
                android:gravity="end"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewWidgetTemp"
                android:textSize="18sp"
                android:text="- -"
                android:padding="2dp"
                android:gravity="end"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/imageViewWidgetIcon"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textViewWidgetCondition"
                android:textSize="20sp"
                android:text="- -"
                android:padding="4dp"
                android:gravity="end"
                android:textColor="@color/white"
                android:textStyle="bold|italic"/>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>